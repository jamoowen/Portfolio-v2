{
  "name": "simple-portfolio",
  "version": "1.0.0",
  "description": "A simple portfolio website.",
  "main": "server.js",
  "type": "module",
  "scripts": {
      "start": "serve public -l 3000",
      "build:css": "tailwindcss -i src/style.css -o public/style.css",
      "watch:css": "tailwindcss -i src/style.css -o public/style.css --watch",
      "dev": "concurrently \"npm run watch:css\" \"serve public -l 3000\""
    },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "16.3.1",
    "express": "^4.17.1",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "postcss": "^8.4.31",
    "serve": "^14.2.5",
    "tailwindcss": "^3.3.5"
  }
}
