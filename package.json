{
  "name": "simple-portfolio",
  "version": "1.0.0",
  "description": "A simple portfolio website.",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "vercel dev --prod",
    "build:css": "tailwindcss -i src/style.css -o public/style.css",
    "watch:css": "tailwindcss -i src/style.css -o public/style.css --watch",
    "build": "npm install && npm run build:css",
    "dev": "concurrently \"nodemon server.js\" \"npm run watch:css\""
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "16.3.1",
    "express": "^4.17.1",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
